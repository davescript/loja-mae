{
  "name": "loja-mae",
  "version": "1.0.0",
  "description": "E-commerce completo full stack com Cloudflare Workers",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "wrangler dev",
    "dev:frontend": "vite",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc",
    "build:backend:check": "tsc && wrangler deploy --dry-run",
    "build:frontend": "vite build",
    "deploy": "npm run build && wrangler deploy",
    "deploy:backend": "wrangler deploy --env production",
    "deploy:frontend": "npm run build:frontend",
    "d1:migrate": "wrangler d1 migrations apply loja-mae-db",
    "d1:migrate:local": "wrangler d1 migrations apply loja-mae-db --local",
    "d1:seed": "wrangler d1 execute loja-mae-db --file=./scripts/seed.sql",
    "d1:seed:local": "wrangler d1 execute loja-mae-db --local --file=./scripts/seed.sql",
    "d1:limpar-exemplo": "wrangler d1 execute loja-mae-db --remote --file=./scripts/limpar-produtos-exemplo.sql",
    "d1:limpar-exemplo:local": "wrangler d1 execute loja-mae-db --local --file=./scripts/limpar-produtos-exemplo.sql",
    "d1:limpar-clientes": "wrangler d1 execute loja-mae-db --remote --file=./scripts/limpar-todos-clientes.sql",
    "d1:limpar-clientes:local": "wrangler d1 execute loja-mae-db --local --file=./scripts/limpar-todos-clientes.sql",
    "setup": "bash scripts/setup.sh",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20241106.0",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.1",
    "@radix-ui/react-toast": "^1.2.2",
    "@stripe/react-stripe-js": "^5.3.0",
    "@stripe/stripe-js": "^8.4.0",
    "@tanstack/react-query": "^5.56.2",
    "@types/dompurify": "^3.0.5",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "dompurify": "^3.3.0",
    "framer-motion": "^11.3.19",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.427.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.66.0",
    "react-router-dom": "^6.26.1",
    "recharts": "^3.4.1",
    "stripe": "^17.1.0",
    "tailwind-merge": "^2.4.0",
    "zod": "^3.25.76",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "postcss": "^8.4.40",
    "tailwindcss": "^3.4.7",
    "typescript": "^5.5.4",
    "vite": "^7.2.2",
    "wrangler": "^4.46.0"
  }
}
